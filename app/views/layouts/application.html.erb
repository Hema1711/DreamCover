  <body> 
 
  <header class="header" data-controller="hello">

    <a href="/landing_page" class=" header-title index-anch"> 
        <img class="dream-logo-header" src="/assets/dream_logo.png" alt="">
    </a>

    <nav class="navbar-header">
        <a class="index-anch" href="/landing_page">home</a>
        <a class="index-anch" href="/product/product_index">products</a>
        <a class="index-anch" href="/products/contact">Contact Us</a>
        <a class="index-anch" href="#blogs">About Us</a>
       
    </nav>

   <div class="icons"> 
        <div class="fas fa-bars" id="menu-btn"></div> 
        
        <% if $session_user != "" %>
            <div class="fas fa-search" id="search-btn" data-action="click->hello#search_box"></div>
            <div class="fas fa-shopping-cart header-btn"  id="cart-btn" data-action="click->hello#cart_binding"></div> 
            <div class="user_btn">
              <%= link_to "", user_index_path, :method => :get,  class:"fas fa-user user_btn-link" %> 
            </div> 
           

 <%= button_to 'Logout', '/auth/logout',class:"btn btn-secondary btn-index", method: :get, data:{turbo: "false"} %>   


        <% else %>
            <div class="fas fa-search" id="search-btn" data-action="click->hello#search_box"></div>
            <div class="fas fa-shopping-cart header-btn"  id="cart-btn" data-action="click->hello#cart_binding"></div> 
            <%= button_to 'Login', '/auth/auth0',class: " btn-login-header form", method: :post, data:{turbo: "false"}%>
            
        <% end %>
    </div> 
 

    <form class="search-form" data-hello-target ="search" id="search-bar"> 
        <input type="search" id="search-box" placeholder="search here..."> 
        <label for="search-box" class="fas fa-search" ></label> 
    </form> 
 
 
 <div class="shopping-cart" data-hello-target="cart" id="cart-bar">
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="/assets/bed-sheet-2.jpg" alt="">
            <div class="content">
                <h3>Bed Sheets</h3>
                <span class="price">$4.99/-</span>
                <span class="quantity">qty : 1</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="/assets/bed-sheet-2.jpg" alt="">
            <div class="content">
                <h3>Bed Sheets</h3>
                <span class="price">$4.99/-</span>
                <span class="quusers/get_userantity">qty : 1</span>
            </div>
        </div>
        <div class="box">
            <i class="fas fa-trash"></i>
            <img src="/assets/bed-sheet-2.jpg" alt="">
            <div class="content">
                <h3>Bed Sheets</h3>
                <span class="price">$4.99/-</span>
                <span class="quantity">qty : 1</span>
            </div>
        </div>
        <div class="total"> total : $19.69/- </div>
        <a href="#" class="btn">checkout</a>
    </div> 
     


</header>

<!-- header section ends -->


